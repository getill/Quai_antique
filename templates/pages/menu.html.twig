{% extends 'base.html.twig' %}

{% block title %}Quai antique - Restaurant savoyard - La carte
{% endblock %}

{% block body %}
	<h1 class="text-center text-white my-5">La carte</h1>

	<div class="container">
		<h2 class="text-white text-start my-5 ms-5">Entr√©es</h2>

		<div class="d-flex align-items-stretch justify-content-center row row-cols-1 row-cols-md-3 g-4 w-75 mx-auto mb-5">
			{% for menu in plats %}
				<div class="col d-flex justify-content-center">
					<div class="card d-flex" style="width: 18rem;">
						<img src="/assets/img/dishes/{{menu.img}}" class="card-img-top" alt="{{menu.name}}" title="{{menu.name}}">
						<div class="card-body">
							<h5 class="card-title">{{menu.name}}</h5>
							<p class="card-text">{{menu.description}}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

		<h2 class="text-white my-5 ms-5">Plats</h2>

		<h2 class="text-white my-5 ms-5">Desserts</h2>
	</div>


{% endblock %}
