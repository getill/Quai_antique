{% extends 'base.html.twig' %}

{% block title %}Quai antique - Restaurant savoyard - La carte
{% endblock %}

{% block body %}
	<h1 class="text-center text-white my-5">La carte</h1>

	<div class="container">
		<h3 class="text-white text-start my-5 ms-5">Entrées</h3>

		<div class="d-flex align-items-stretch justify-content-center row row-cols-1 row-cols-md-3 g-4 w-75 mx-auto mb-5">

			{% for menu in plats %}
				{% if menu.category == 'Entrée' %}
					<div class="col d-flex justify-content-center">
						<div class="card d-flex" style="width: 18rem;">
							<img src="/assets/img/dishes/{{menu.img}}" class="card-img-top thumbnail" height="175" alt="{{menu.name}}" title="{{menu.name}}">
							<div class="card-body">
								<h5 class="card-title">{{menu.name}}</h5>
								<p class="card-text">{{menu.description|u.truncate(100)}}</p>
							</div>
							<div class="card-footer bg-transparent">{{menu.price}}€</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>


		<h3 class="text-white my-5 ms-5">Plats</h3>

		<div class="d-flex align-items-stretch justify-content-center row row-cols-1 row-cols-md-3 g-4 w-75 mx-auto mb-5">
			{% for menu in plats %}
				{% if menu.category == 'Plat' %}
					<div class="col d-flex justify-content-center">
						<div class="card d-flex" style="width: 18rem;">
							<img src="/assets/img/dishes/{{menu.img}}" class="card-img-top thumbnail" height="175" alt="{{menu.name}}" title="{{menu.name}}">
							<div class="card-body">
								<h5 class="card-title">{{menu.name}}</h5>
								<p class="card-text">{{menu.description|u.truncate(100)}}</p>
							</div>
							<div class="card-footer bg-transparent">{{menu.price}}€</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>

		<h3 class="text-white my-5 ms-5">Desserts</h3>

		<div class="d-flex align-items-stretch justify-content-center row row-cols-1 row-cols-md-3 g-4 w-75 mx-auto mb-5">
			{% for menu in plats %}
				{% if menu.category == 'Déssert' %}
					<div class="col d-flex justify-content-center">
						<div class="card d-flex" style="width: 18rem;">
							<img src="/assets/img/dishes/{{menu.img}}" class="card-img-top thumbnail" height="175" alt="{{menu.name}}" title="{{menu.name}}">
							<div class="card-body">
								<h5 class="card-title">{{menu.name}}</h5>
								<p class="card-text">{{menu.description}}</p>
							</div>
							<div class="card-footer bg-transparent">{{menu.price}}€</div>
						</div>
					</div>
				{% endif %}
			{% endfor %}
		</div>

	</div>
</div>{% endblock %}
